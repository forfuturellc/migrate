{
  "name": "@forfuture/migrate",
  "version": "0.2.1",
  "description": "Database-agnostic Migration framework",
  "author": {
    "name": "forfuture",
    "email": "we@forfuture.co.ke",
    "url": "https://forfuture.tech"
  },
  "main": "dist/lib/index",
  "bin": {
    "migrate": "bin/migrate"
  },
  "scripts": {
    "build": "npm run build:src && npm run build:test",
    "build:src": "tsc --project src",
    "build:test": "tsc --project test",
    "clean:dist": "rimraf dist",
    "clean:dist-test": "rimraf dist-test",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "tslint src/**/*.ts test/**/*.ts",
    "test:unit": "ava dist-test/unit/**/test.*.js",
    "prebuild:src": "npm run clean:dist",
    "prebuild:test": "npm run clean:dist-test",
    "precommit": "npm run build:src && git add dist",
    "pretest:unit": "npm run build"
  },
  "dependencies": {
    "commander": "^2.12.2",
    "debug": "^3.1.0",
    "semver": "^5.5.1"
  },
  "peerDependencies": {
    "sequelize": "4.x.x"
  },
  "devDependencies": {
    "@types/debug": "0.0.30",
    "@types/node": "^10.7.1",
    "@types/semver": "^5.5.0",
    "@types/sequelize": "^4.27.24",
    "ava": "^0.25.0",
    "rimraf": "^2.6.2",
    "sequelize": "^4.38.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
